<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-zinc-800 px-4 sm:px-10 py-6 sm:py-8 text-white overflow-hidden"
>
  <!-- Cards -->
  <div
    class="cards grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 sm:gap-6 md:gap-10 mt-6 sm:mt-8"
  >
    <% user.posts.forEach(function(post){ %>
    <div class="card rounded-lg overflow-hidden">
      <div
        class="w-full h-40 sm:h-52 md:h-60 rounded-lg bg-transparent overflow-hidden relative"
      >
        <a href="/delete/<%= post._id %>">
          <i
            class="flex text-center justify-center absolute w-7 h-7 top-1 right-2 cursor-pointer rounded-full bg-zinc-400 ri-delete-back-2-fill bg-transparent"
          ></i>
        </a>
        <img
          class="w-full h-full object-cover object-center"
          src="/images/uploads/<%= post.image %>"
          alt=""
        />
      </div>
      <h5 class="mt-2 text-xs sm:text-sm text-center">
        <%= post.description %>
      </h5>
    </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>

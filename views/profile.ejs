<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>

  <!-- Profile Details -->
  <div class="profileDetails flex flex-col items-center justify-center mt-6 sm:mt-10 px-4">
    <div class="relative">
      <span id="uploadIcon" class="w-8 h-8 sm:w-10 sm:h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 cursor-pointer">
        <i class="ri-pencil-fill text-zinc-900 text-sm sm:text-base"></i>
      </span>
      <div class="img w-24 h-24 sm:w-32 sm:h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover object-top"
          src="/images/uploads/<%= user.profileImage %>"
          alt=""
        />
      </div>
    </div>
    <h1 class="text-xl sm:text-2xl font-semibold mt-3"><%=user.fullname%></h1>
    <h3 class="text-sm sm:text-[16px]">@<%= user.username %></h3>
    <a
      href="/edit"
      class="px-5 py-2 sm:px-7 bg-zinc-700 rounded-full text-xs sm:text-sm font-semibold mt-3"
      >Edit</a
    >
    <a href="/add"
      class="px-8 py-2 sm:px-10 rounded-lg bg-red-700 text-[12px] sm:text-[13px] font-semibold mt-4"
    >
      Add New Post
    </a>
  </div>

  <!-- Cards Section -->
  <div class="cards px-4 sm:px-10 flex flex-col sm:flex-wrap sm:flex-row gap-4 w-full mt-6">
    <div class="card m-0 sm:m-2 flex flex-col items-center sm:items-start">
      <div class="cardimg w-full max-w-[14rem] h-36 sm:w-52 sm:h-40 rounded-xl bg-zinc-500 overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user?.posts[0]?.image %>"
        />
      </div>
      <a href="/show/posts" class="inline-block text-lg sm:text-xl font-semibold mt-3 text-center sm:text-left">
        Your Uploaded Pins
      </a>
      <h5 class="text-xs sm:text-sm font-medium opacity-60">
        <%= user.posts.length %> pins
      </h5>
    </div>
  </div>
</div>

<script>
  const uploadIcon = document.querySelector('#uploadIcon');
  const uploadform = document.querySelector('#uploadform input'); 
  const form = document.querySelector('#uploadform'); 
  uploadIcon.addEventListener('click',function(){
    uploadform.click();
  })

  uploadform.addEventListener('change',function(){
    form.submit();
  })
</script>

<% include ./partials/footer.ejs %>

<% include ./partials/header.ejs %>
<div
  class="w-full min-h-screen bg-zinc-800 px-4 sm:px-10 py-6 sm:py-8 text-white overflow-hidden"
>
  <!-- Cards -->
  <div class="cards grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 sm:gap-6 md:gap-10 mt-6 sm:mt-8">
    <% post.forEach(function(post){ %>
    <div class="card rounded-lg overflow-hidden">
      <h6 class="text-xs opacity-50 mb-2 sm:mb-4 text-center py-2 font-semibold">
        @<%= post.user.username %>
      </h6>
      <div class="w-full h-40 sm:h-52 md:h-60 rounded-lg bg-transparent overflow-hidden">
        <img
          class="w-full h-full object-cover object-center"
          src="<%= post.image.url %>"
          alt=""
        />
      </div>
      <h5 class="mt-2 text-xs sm:text-sm text-center"><%= post.description %></h5>
    </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer.ejs %>

<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-4 sm:px-10 py-5 text-white">
  <h1 class="text-lg sm:text-xl font-semibold">Create a new post</h1>
  <hr class="opacity-10 mt-3">

  <form action="/createpost" method="post" enctype="multipart/form-data" class="mt-5 space-y-3">
    <!-- File Upload -->
    <input 
      class="block w-full sm:w-1/3 px-3 py-2 border-2 border-zinc-500 rounded-md bg-transparent text-sm sm:text-base"
      type="file" 
      name="postimage"
    >

    <!-- Title -->
    <input 
      class="block w-full sm:w-1/3 px-3 py-2 border border-zinc-500 h-[40px] rounded-md bg-transparent text-sm sm:text-base"
      type="text" 
      placeholder="Title" 
      name="title"
    >

    <!-- Description -->
    <textarea 
      class="block w-full sm:w-1/3 px-3 py-2 border border-zinc-500 h-40 sm:h-60 rounded-md bg-transparent text-sm sm:text-base"
      placeholder="Description" 
      name="description"
    ></textarea>

    <!-- Submit -->
    <input 
      class="block w-full sm:w-1/3 px-3 py-2 border border-zinc-500 h-[40px] rounded-md cursor-pointer bg-red-700 hover:bg-red-800 transition-colors text-white text-sm sm:text-base"
      type="submit" 
      value="Post"
    >
  </form>
</div>
<% include ./partials/footer.ejs %>
